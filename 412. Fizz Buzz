class Solution(object):
    def fizzBuzz(self, n):

        #initialise count and array
        count = 0
        answers = []
        #loop until counted
        while count < n:
            count += 1
            #if the remainder is 0, it is divisible and acts accordingly
            if (count%3 == 0 and count%5 != 0):
                answers.append("Fizz")
            elif (count%5 == 0 and count%3 != 0):
                answers.append("Buzz")
            elif (count%3 == 0 and count%5 == 0):
                answers.append("FizzBuzz")
            else:
                answers.append(str(count))

        return answers
