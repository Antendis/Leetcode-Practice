# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution(object):
    def checkTree(self, root):

        root = root[0]
        child1, child2 = root[1], root[2]

        if(root == child1 + child2):
            return True
        else:
            return False
